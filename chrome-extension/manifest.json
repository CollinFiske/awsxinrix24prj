{
    "manifest_version": 3,
    "name": "INRIX24' Chrome Extension",
    "version": "1.0",
    "description": "A Chrome extension that interacts with a Flask app for INRIX Hackathon 2024.",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["http://localhost:5000/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }